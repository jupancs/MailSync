<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/email_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_round"
        app:layout_constraintBottom_toTopOf="@id/run_nfd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icon_relativelayout"
            android:layout_width="55dp"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:scaleType="center"
                android:src="#D32F2F" />

            <TextView
                android:id="@+id/icon_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/icon_image"
                android:layout_alignTop="@+id/icon_image"
                android:layout_alignRight="@+id/icon_image"
                android:layout_alignBottom="@+id/icon_image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="E"
                android:textColor="#ffffff"
                android:textSize="40sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/icon_relativelayout"
            android:layout_toRightOf="@+id/icon_relativelayout"
            android:text="Ju Pan"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_account"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/icon_relativelayout"
            android:layout_toRightOf="@+id/icon_relativelayout"
            android:text="Hello, it's me."
            android:textSize="12sp" />

    </RelativeLayout>

