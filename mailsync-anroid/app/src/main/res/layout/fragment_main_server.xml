    <Button
        android:id="@+id/run_nfd"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/fetch_background"
        android:textSize="17sp"
        android:text="Run NFD"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/email_box"
        app:layout_constraintBottom_toTopOf="@id/run_server"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/run_server"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/fetch_background"
        android:textSize="17sp"
        android:text="Run Server"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/run_nfd"
        app:layout_constraintBottom_toTopOf="@id/btn_clear_database"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

